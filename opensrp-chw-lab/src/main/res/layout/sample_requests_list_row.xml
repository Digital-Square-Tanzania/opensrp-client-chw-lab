<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outlet_register_columns"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/sample_test_collumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="@dimen/register_member_village_size"
                android:text="PatientID" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_dot_separator_margin"
                android:text=":"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/patient_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:textColor="@color/black"
                android:textSize="@dimen/register_member_village_size"
                android:layout_marginStart="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="@dimen/register_member_village_size"
                android:text="SampleId" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_dot_separator_margin"
                android:text=":"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/sample_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:textColor="@color/black"
                android:textSize="@dimen/register_member_village_size"
                android:layout_marginStart="5dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="@dimen/register_member_village_size"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:text="Sample Type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_dot_separator_margin"
                android:text=":"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/sample_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/register_member_village_size"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="@dimen/register_member_village_size"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:text="Request Date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_dot_separator_margin"
                android:text=":"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/request_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/register_member_village_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="@dimen/register_member_village_size"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:text="Sample Taken Date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/register_dot_separator_margin"
                android:text=":"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/sample_taken_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto"
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:textColor="@android:color/black"
                android:textSize="@dimen/register_member_village_size" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sample_test_collumn"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Not Processed"/>



</androidx.constraintlayout.widget.ConstraintLayout>
